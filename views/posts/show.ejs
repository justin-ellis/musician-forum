 <h1><%=post.title%></h1>
 <small>
				<div id="postAuthor"> by:
				<a href="/members/<%=member._id%>"><%=member.username%></a>
		</div>
			</small>
</header>
<main>
	<section>
		<h2>Post Attributes:</h2>
		<ul>
			<li><%=post.title%></li>
		 	<li><img class="imagePost" src="<%=post.img%>"></li>
		 	<li>Description:  <%=post.descr%></li>
		 	<li>Category:  <%=post.category%></li>
		 	<li>Demo: <a target="_blank" href="<%=post.sound%>">YouTube</a></li>
		</ul>
	</section>
	<section>
		<button class ="btn"><a href="/posts/<%=post.id%>/edit">Edit This Post</a>
		</button>
	</section>
	<br>
	<section>
		<form action ='/posts/<%=post.id%>?_method=DELETE' method='POST'>
			<input type="submit" value="Delete This Post">
		</form>
	</section>

	<section>
	
	</section>
